<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity" tools:layout_editor_absoluteY="73dp">

    <EditText
            android:id="@+id/resultEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusableInTouchMode="false"
            android:inputType="numberSigned|numberDecimal"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/operationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn7" app:layout_constraintEnd_toStartOf="@+id/btn7"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/newNumeditText"
            android:layout_marginStart="8dp"/>

    <EditText
            android:id="@+id/newNumeditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned|numberDecimal"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="+"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnEquals"
            app:layout_constraintStart_toEndOf="@+id/btnEquals" android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/btnEquals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="="
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn3"
            app:layout_constraintStart_toStartOf="@+id/btn3"/>

    <Button
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="-"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn3" app:layout_constraintStart_toEndOf="@+id/btn3"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/btnMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="*"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn6" app:layout_constraintStart_toEndOf="@+id/btn6"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/btnDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="/"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn9" app:layout_constraintStart_toEndOf="@+id/btn9"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="."
            app:layout_constraintBaseline_toBaselineOf="@+id/btnEquals" app:layout_constraintEnd_toEndOf="@+id/btn2"
    />

    <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="9"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/resultEditText"/>

    <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="8"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn9" app:layout_constraintEnd_toStartOf="@+id/btn9"
            android:layout_marginEnd="8dp"/>

    <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="7"
            app:layout_constraintEnd_toStartOf="@+id/btn8"
            android:layout_marginEnd="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/btn8"/>

    <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="6"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn9"
            app:layout_constraintStart_toStartOf="@+id/btn9"/>

    <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="5"
            app:layout_constraintEnd_toEndOf="@+id/btn8"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn6"/>

    <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="4"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btn5"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn5"/>

    <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn6"
            app:layout_constraintStart_toStartOf="@+id/btn6"/>

    <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="2"
            app:layout_constraintEnd_toEndOf="@+id/btn5"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn3"/>

    <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="1"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btn2"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn2"/>

    <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="0"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btnDot"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnDot"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>

</android.support.constraint.ConstraintLayout>